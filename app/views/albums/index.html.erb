<h1>Albums</h1>

<div class="row">
  <% @albums.each do |album| %>
    <div class="col-md-4">
      <div class="card mb-4 box-shadow">
        <div class="card-body">
          <p class="card-body">Name: <%= album.title %><br>
            Artist: <%= album.artist %><br>
            Released: <%= album.released %>
          </p>
          <%= link_to 'View', album, class: "btn btn-sm btn-primary card-buttons", type: "button" %>
          <%= link_to 'Edit', edit_album_path(album), class: "btn btn-sm btn-secondary card-buttons", type: "button" %>
          <%= link_to 'Delete', album, method: :delete, data: {confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger card-buttons", type: "button", :remote => true %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'New Album', new_album_path %>
