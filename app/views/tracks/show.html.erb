<p>
  <strong>Album:</strong>
  <%= @track.album.title %>
</p>

<p>
  <strong>Title:</strong>
  <%= @track.title %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @track.artist %>
</p>

<p>
  <strong>Released:</strong>
  <%= @track.released %>
</p>

<p>
  <strong>Length:</strong>
  <%= format("%02d", @track.minutes) %>:<%= format("%02d", @track.seconds) %>
</p>

<p>
  <strong>Average Rating:</strong>
  <%= avg_rating(@track) %>
</p>


<h2>Reviews</h2>
<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= t('general.name') %></th>
      <th scope="col"><%= t('general.description') %></th>
      <th scope="col"><%= t('general.rating') %></th>
      <th scope="col"><%= t('review.edit') %></th>
      <th scope="col"><%= t('review.delete') %></th>
    </tr>
  </thead>
  <tbody>
    <% @track.reviews.each do |review| %>
    <tr id="review_<%= review.id %>">
      <th><%= review.name %>
      <th><%= review.description %></th>
      <th><%= review.rating %></th>
      <th><%= link_to t('general.edit'), edit_review_path(review)%></th>
      <th><%= link_to t('general.delete'), review, method: :delete, data: { confirm: 'Are you sure?' }, :remote=> true %></th>
    </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Add Review', new_review_path(track_id: @track) %> |
<%= link_to 'Edit', edit_track_path(@track) %> |
<%= link_to 'Back', tracks_path %>
