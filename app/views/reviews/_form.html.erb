      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, placeholder: t('general.name'), class: "form-control" %>
  </div>

  <div class="field">
    <%= form.text_field :description, placeholder: t('general.description'), class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :rating %>:
    <%= form.number_field :rating %>
  </div>

  <%= form.hidden_field :track_id, value: @review.track.id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
